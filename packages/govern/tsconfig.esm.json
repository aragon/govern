{
  "extends": "@ethereumjs/config-tsc",
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "strict": false,
    "outDir": "./dist/esm",
    "sourceRoot": "./",
    "inlineSources": true,
    "types": ["jest"],
    "lib": ["dom"]
  },
  "include": ["./internal/**/*", "./public/**/*"]
}
